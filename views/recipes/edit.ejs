<%- include('../partials/header') %>

<h1>Edit Recipe</h1>
    <form action="/recipes/<%= recipe.id %>?_method=PUT" method="POST" autocomplete="off">
      <input type="text" name="recipe" value="<%= recipe.recipe %>">
      <input type="checkbox" name="done" <%= recipe.done ? 'checked' : '' %>>
      <button type="submit">Save Recipe</button>
    </form>

