<%- include('../partials/header')%>
<h1>Your Recipe Collection</h1>
<table id="collection">
    <thead>
        <tr>
            <th>Title</th>
            <th>Ingredients</th>
            <th>Instructions</th>
            <th>Comments</th>
        </tr>
    </thead>
    <tbody>
    <% recipes.forEach(recipe => { %>
        <tr>
            <td><%= recipe.title %></td>
            <td><%= recipe.ingredients %></td>
            <td><%= recipe.instructions %></td>
            <td><%= recipe.comments %></td>
            <td><a href="/recipes/<%=recipe.id%>">DELETE</a></td>
            <td><a href="/recipes/<%=recipe.id%>">DETAILS</a></td>
        </tr>
    <% }); %>
    </tbody>
</table>
<%- include('../partials/footer')%>