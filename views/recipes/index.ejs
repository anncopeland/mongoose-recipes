<%- include('../partials/header')%>

<h1>Your Recipe Collection</h1>
<table id="collection">
    <thead>
        <tr>
            <th>Title</th>
            <th>Ingredients</th>
            <th>Instructions</th>
        </tr>
    </thead>
    <tbody>
    <% recipes.forEach(function(r) { %>
        <tr>
            <td><%= r.title %></td>
            <td><%= r.ingredients %></td>
            <td><%= r.instructions %></td>
            <td><a href="/recipes/<%=r._id%>">DETAILS</a></td>
        </tr>
    <% }); %>
    </tbody>
</table>

<%- include('../partials/footer')%>